<h1><%=Role.human_name%> '<%=@role.name%>'</h1>
<div class="mostrar-roles">
  <p><strong><%=Role.human_attribute_name("check_ip")%></strong>: <%=@role.check_ip? ? t("main.si") : t("main.no_")%></p>
  <p><strong><%= User.human_name.pluralize %></strong></p>
  <ul>
    <% @role.users.each do |m| %>
      <li><%= m.login %></li>
    <% end %>
  </ul>
</div>

<div class="content-botones-cms">
  <div class="botones-cms guardar">
    <%= link_to t('main.edit', :object => Role.human_name), :action => 'edit', :id => @role %>
  </div>
</div>

<%= volver_privado url_for( :action => 'list') %>