<div>
  <label for="image[title]"><%= "title" %></label>
  <%= text_field('image', 'title', :size => 20) %>
</div>
<div>
  <label for="image[name]"><%= "description" %></label>
  <%= text_area('image', 'name', :rows => 3, :cols => 28) %>
</div>
<div>
  <label for="image[image]"><%= "file" %> <%=t("main.required")%></label>
  <%= file_field "image", "image", :size => 18, :class => 'trigger' %>
  <p class="info-archivos-permitidos">(<%= t('image.upload_image_hint') %>)</p>
</div>
