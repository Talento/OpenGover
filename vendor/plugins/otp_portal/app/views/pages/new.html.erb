<h1>New page</h1>

<%= error_messages_for :page %>

<% form_for(:page, :url => pages_path) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Application</b><br />
    <%= f.text_area :application %>
  </p>

  <p>
    <b>Site</b><br />
    <%= f.text_field :site_id %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<div class="buttons">
  <%= link_to 'Back', pages_path %>
</div>
