<h1>Listing pages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Edit</th>
    <th>Destroy</th>
    <th>Manage blocks</th>
  </tr>
  
<% for page in @pages %>
  <tr>
    <td><%= page.name %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page_path(page), :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Manage blocks', page_path(page) %></td>
  </tr>
<% end %>
</table>

<div class="buttons">
<%= link_to 'New page', new_page_path %>
    </div>