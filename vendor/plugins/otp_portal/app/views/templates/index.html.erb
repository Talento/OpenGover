<h1>Listing templates</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Edit</th>
    <th>Destroy</th>
    <th>Manage blocks</th>
  </tr>
  
<% for template in @templates %>
  <tr>
    <td><%= template.name %></td>
    <td><%= link_to 'Edit', edit_template_path(template) %></td>
    <td><%= link_to 'Destroy', template_path(template), :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Manage blocks', template_path(template) %></td>
  </tr>
<% end %>
</table>

<div class="buttons">
<%= link_to 'New template', new_template_path %>
    </div>