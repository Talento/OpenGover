<h1>New template</h1>

<%= error_messages_for :og_template %>

<% form_for(:og_template, :url => {:controller => :templates, :action => :create}) do |f| %>
    <%= f.hidden_field :site_id %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Content</b><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<div class="buttons">
  <%= link_to 'Back', :controller => :templates, :action => :index %>
</div>
