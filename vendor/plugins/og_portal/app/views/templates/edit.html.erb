<h1>Editing template</h1>

<%= error_messages_for :template %>

<% form_for(:template, :url => {:controller => :templates, :action => :update,:id => @template}, :html => { :method => :put }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Content</b><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<div class="buttons">
  <%= link_to 'Show', :controller => :templates, :action => :show, :id => @template %> |
  <%= link_to 'Back', :controller => :templates, :action => :index %>
</div>
