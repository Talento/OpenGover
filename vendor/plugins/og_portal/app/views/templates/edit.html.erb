<h1>Editing template</h1>

<%= error_messages_for :og_template %>

<% form_tag({:controller => :templates, :action => :update,:id => @edit_template}, { :method => :put }) do %>

  <%= render :partial => "form" %>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<div class="buttons">
  <%= link_to 'Show', :controller => :templates, :action => :show, :id => @edit_template %> |
  <%= link_to 'Back', :controller => :templates, :action => :index %>
</div>
