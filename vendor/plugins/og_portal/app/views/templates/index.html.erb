<h1>Listing templates</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Edit</th>
    <th>Destroy</th>
    <th>Manage blocks</th>
    <th>Set as main</th>
  </tr>
  
<% for og_template in @og_templates %>
  <tr>
    <td><%= og_template.name %><%= " (Main)" if og_template.main%></td>
    <td><%= link_to 'Edit', :controller => :templates, :action => :edit, :id => og_template %></td>
    <td><%= link_to 'Destroy', {:controller => :templates, :action => :destroy, :id => og_template}, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Manage blocks', :controller => :templates, :action => :manage_blocks, :id => og_template %></td>
    <td><%= link_to 'Set as main', :controller => :templates, :action => :set_as_main, :id => og_template %></td>
  </tr>
<% end %>
</table>

<div class="buttons">
<%= link_to 'New template', :controller => :templates, :action => :new %>
    </div>