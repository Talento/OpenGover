<%= f.hidden_field :parent_id %>
<%= f.hidden_field :site_id %>
<p>
  <b>Name</b><br/>
  <%= f.text_field :name %>
</p>
<p>
  <b>Application</b><br/>
  <%= select_tag "application_text", "<option>Select...</option>" + @available_applications.collect {|aa| "<option value=\"#{aa[:value].to_s.gsub("\"","'")}\">#{aa[:name]}</option>"}.join%>
</p>
<p>
  <b>Description</b><br/>
  <%= f.text_field :description %>
</p>
<p>
  <b>Position</b><br/>
  <%= f.text_field :position %>
</p>
<p>
  <b>In menu</b><br/>
  <%= f.select(:in_menu, [['Yes', true], ['No', false]]) %>
</p>
<p>
  <b>Published</b><br/>
  <%= f.select(:published, [['Yes', true], ['No', false]]) %>
</p>
<p>
  <b>Public</b><br/>
  <%= f.select(:public, [['Yes', true], ['No', false]]) %>
</p>
<p>
  <b>Link</b><br/>
  <%= f.text_field :link %>
</p>
<p>
  <b>Template</b><br/>
  <%= f.collection_select(:template_id, @templates, :id, :name) %>
</p>